<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="restomono.Views.PaymentPage"
             Title="Payment">

    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Confirm Your Payment" FontSize="24" HorizontalOptions="Center" />

        <!-- Read-only name field -->
        <Label Text="Name:" />
        <Entry x:Name="nameEntry" IsReadOnly="True" />

        <Label Text="Card Number:" />
        <Entry Placeholder="Card number" Keyboard="Numeric" />

        <Button Text="Confirm Payment" Clicked="OnConfirmPaymentClicked" />
    </VerticalStackLayout>
</ContentPage>
