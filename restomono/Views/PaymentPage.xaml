<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:restomono.ViewModels"
             x:Class="restomono.Views.PaymentPage"
             Title="Payment">

    <ContentPage.BindingContext>
        <viewModels:PaymentViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20">
        <Label Text="Name on Card:" />
        <Entry Text="{Binding Name}" Placeholder="Your name" />

        <Label Text="Card Number:" />
        <Entry Text="{Binding CardNumber}" Keyboard="Numeric" Placeholder="0000 0000 0000 0000" />

        <Button Text="Confirm Payment" Command="{Binding ConfirmPaymentCommand}" />

        <Label Text="{Binding ConfirmationMessage}" FontSize="18" TextColor="Green" Margin="10" />
    </VerticalStackLayout>
</ContentPage>
