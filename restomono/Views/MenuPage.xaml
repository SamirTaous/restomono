<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:restomono.ViewModels"
             x:Class="restomono.Views.MenuPage"
             Title="Menu">

    <ContentPage.BindingContext>
        <viewModels:MenuViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="10">
        <CollectionView ItemsSource="{Binding Plats}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5" Padding="10" BorderColor="LightGray">
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold" />
                            <Label Text="{Binding Description}" FontSize="14" />
                            <Label Text="{Binding Price, StringFormat='Price: {0} DH'}" />
                            <Button Text="Add to Cart"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:MenuViewModel}}, Path=AddToCartCommand}"
                                    CommandParameter="{Binding .}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label Text="{Binding Total, StringFormat='Total: {0} DH'}"
               FontSize="20" HorizontalOptions="Center" Margin="10" />

        <Button Text="Go to Cart"
                Clicked="OnCartClicked"
                HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
