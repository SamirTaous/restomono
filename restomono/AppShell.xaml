<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="restomono.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:restomono.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="restomono">

    <!-- Initial Route -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage"
        IsVisible="False" />

    <!-- Main Pages -->
    <ShellContent
        Title="Menu"
        ContentTemplate="{DataTemplate views:MenuPage}"
        Route="MenuPage" />

    <ShellContent
        Title="Payment"
        ContentTemplate="{DataTemplate views:PaymentPage}"
        Route="PaymentPage"
        IsVisible="False" />

    <ShellContent
        Title="Profile"
        ContentTemplate="{DataTemplate views:ProfilePage}"
        Route="ProfilePage"
        IsVisible="False" />

    <!-- Admin Dashboard -->
    <ShellContent
        Title="Statistics"
        ContentTemplate="{DataTemplate views:StatisticsPage}"
        Route="StatisticsPage"
        IsVisible="False" />

    <!-- Admin CRUD Pages -->
    <ShellContent
        Title="Manage Dishes"
        ContentTemplate="{DataTemplate views:PlatCrudPage}"
        Route="PlatCrudPage"
        IsVisible="False" />

    <ShellContent
        Title="Manage Clients"
        ContentTemplate="{DataTemplate views:UserCrudPage}"
        Route="UserCrudPage"
        IsVisible="False" />

</Shell>
