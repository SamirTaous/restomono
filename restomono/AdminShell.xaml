<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="restomono.AdminShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:restomono.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Admin Panel">

    <ShellContent
        Title="Statistics"
        ContentTemplate="{DataTemplate views:StatisticsPage}"
        Route="StatisticsPage" />

    <ShellContent
        Title="Manage Dishes"
        ContentTemplate="{DataTemplate views:PlatCrudPage}"
        Route="PlatCrudPage"
        IsVisible="False" />

    <ShellContent
        Title="Manage Clients"
        ContentTemplate="{DataTemplate views:UserCrudPage}"
        Route="UserCrudPage"
        IsVisible="False" />
</Shell>
